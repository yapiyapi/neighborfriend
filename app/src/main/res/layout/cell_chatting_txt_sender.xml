<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_txt_s"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/neighborfriend_dark"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_sendMessage_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:maxWidth="280dp"
            android:text="메세지"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/txt_not_sent"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_created_at_s"
        app:layout_constraintTop_toTopOf="@+id/txt_created_at_s"
        app:srcCompat="@drawable/not_sent" />

    <TextView
        android:id="@+id/txt_created_at_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="오전 12:00"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_txt_s"
        app:layout_constraintEnd_toStartOf="@+id/cardView_txt_s" />

    <TextView
        android:id="@+id/txt_readNum_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:text="1"
        android:textColor="@color/neighborfriend_dark"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_created_at_s"
        app:layout_constraintEnd_toStartOf="@+id/cardView_txt_s" />



</androidx.constraintlayout.widget.ConstraintLayout>