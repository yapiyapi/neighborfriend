<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_search">

    <LinearLayout
        android:id="@+id/linear_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        android:background="#FAFAFA"
        android:layout_marginBottom="2dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="밴드 검색"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search_btn" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="32dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_search_bar">

        <!--        title-->
        <TextView
            android:id="@+id/main_subtitle_myband"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--        category-->


        <TextView
            android:id="@+id/category_game"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="게임"
            android:background="@drawable/category_layout_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_subtitle_myband" />

        <TextView
            android:id="@+id/category_study"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="공부"
            android:background="@drawable/category_layout_gray"            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_foods" />

        <TextView
            android:id="@+id/category_sports"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="운동"
            android:background="@drawable/category_layout_gray"            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_game" />

        <TextView
            android:id="@+id/category_friends"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="친구"
            android:background="@drawable/category_layout_gray"            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_sports" />

        <TextView
            android:id="@+id/category_hobbies"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/category_layout_gray"
            android:gravity="center"
            android:text="취미"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_study" />

        <TextView
            android:id="@+id/category_etc"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/category_layout_gray"
            android:gravity="center"
            android:text="etc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_hobbies" />

        <TextView
            android:id="@+id/category_foods"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="음식"
            android:background="@drawable/category_layout_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/category_game" />

        <TextView
            android:id="@+id/category_missions"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/category_layout_gray"
            android:gravity="center"
            android:text="미션"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_friends" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>